# Timetable Application Environment Variables
# Copy this file to .env and fill in appropriate values

# Flask Secret Key for session security
SECRET_KEY=your-secret-key-here

# Database Configuration
# SQLite database URI - uncomment and modify if needed
# LOCAL_DATABASE_URI=sqlite:///timetable.db

# Development Mode
# Set to 'development', 'testing', or 'production'
FLASK_ENV=development

# Database Management Mode
# Set to 'true' to bypass password authentication for DB management
# DB_MANAGE_MODE=true

# Flask Debug Mode
# Set to 1 to enable debugging features
FLASK_DEBUG=1

# Host and Port Configuration
# FLASK_RUN_HOST=0.0.0.0
# FLASK_RUN_PORT=5000 